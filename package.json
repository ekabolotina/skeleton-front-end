{
    "name": "skeleton-front-end",
    "version": "0.0.1",
    "description": "Skeleton front-end project built on top of Next.js",
    "license": "MIT",
    "author": "ivan.rusia@mail.ru",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "export": "next export",
        "configure": "dotenv-configure .env.template .env",
        "format": "prettier --write --check",
        "format-all": "yarn run format \"src/**/*.{js,jsx,ts,tsx,json,css,scss}\"",
        "lint-js": "eslint --fix",
        "lint-js-all": "yarn run lint-js \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint-styles": "stylelint --config .stylelintrc.json",
        "lint-styles-all": "yarn run lint-styles \"src/**/*.{css,scss,js,jsx,ts,tsx}\"",
        "lint": "yarn run lint-js-all && yarn run lint-styles-all && yarn format-all --check"
    },
    "browserslist": [
        "extends browserslist-config-google/no-ie"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "engines": {
        "node": "^14.15.0",
        "yarn": "^1.16.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ekabolotina/skeleton-front-end.git"
    },
    "bugs": {
        "url": "https://github.com/ekabolotina/skeleton-front-end/issues"
    },
    "dependencies": {
        "@bit/taptima.common.svg-sprite-icon": "^2.0.5",
        "@emotion/react": "^11.7.1",
        "@emotion/styled": "^11.6.0",
        "@sentry/nextjs": "^6.16.1",
        "axios": "^0.24.0",
        "formik": "^2.2.9",
        "fp-ts": "^2.11.5",
        "inversify": "5",
        "io-ts": "^2.2.16",
        "io-ts-reporters": "^2.0.0",
        "mobx": "^6.3.10",
        "mobx-react": "^7.2.1",
        "next": "11",
        "polished": "3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/plugin-proposal-class-properties": "^7.16.5",
        "@babel/plugin-proposal-decorators": "^7.16.5",
        "@code-quality/stylelint-styled-components-config": "^1.7.0",
        "@emotion/babel-plugin": "^11.7.2",
        "@next/eslint-plugin-next": "^11.1.2",
        "@types/node": "^14.14.31",
        "@types/react": "^17.0.2",
        "@types/validate-npm-package-name": "^3.0.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "autoprefixer": "^10.2.4",
        "babel-preset-env": "^1.7.0",
        "browserslist-config-google": "^3.0.1",
        "dotenv-configure": "^0.1.0",
        "dotenv-load": "^2.0.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.2.1",
        "lint-staged": "^10.0.2",
        "next-compose-plugins": "^2.2.0",
        "next-env": "^1.1.0",
        "node-sass": "^4.12.0",
        "plop": "^2.7.4",

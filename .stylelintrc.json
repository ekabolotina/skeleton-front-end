{
    "processors": [
        [
            "stylelint-processor-styled-components",
            {
                "moduleName": "styled-components",
                "importName": "default",
                "strict": false,
                "ignoreFiles": [],
                "parserPlugins": [
                    "jsx",
                    ["decorators", { "decoratorsBeforeExport": true }],
                    "classProperties",
                    "exportExtensions",
                    "functionBind",
                    "functionSent"
                ]
            }
        ]
    ],
    "extends": [
        "stylelint-config-recommended",
        "@code-quality/stylelint-styled-components-config",
        "stylelint-config-styled-components",
        "stylelint-config-prettier"
    ],
    "plugins": ["stylelint-order"],
    "rules": {
        "no-empty-source": null,
        "declaration-empty-line-before": null,
        "no-missing-end-of-source-newline": null,
        "unit-blacklist": ["rem"],
        "shorthand-property-no-redundant-values": true,
        "selector-type-no-unknown": true,
        "selector-pseudo-element-no-unknown": true,
        "selector-pseudo-class-no-unknown": true,
        "selector-no-vendor-prefix": true,
        "selector-no-qualifying-type": true,
        "selector-attribute-quotes": "always",
        "property-no-vendor-prefix": true,
        "property-no-unknown": true,
        "no-invalid-double-slash-comments": true,
        "unit-no-unknown": null,
        "no-duplicate-at-import-rules": true,
        "function-url-quotes": "always",
        "font-family-no-duplicate-names": true,
        "font-family-name-quotes": "always-unless-keyword",
        "declaration-no-important": true,
        "color-no-invalid-hex": true,
        "indentation": null,
        "at-rule-empty-line-before": [
            "always",
            {
                "except": ["blockless-after-same-name-blockless", "first-nested"],
                "ignore": ["after-comment"]
            }
        ],
        "order/properties-order": [
            [
                "content",
                "position",
                "display",
                "flex",
                "flex-direction",
                "flex-wrap",
                "flex-grow",
                "flex-shrink",
                "flex-basis",
                "grid-area",
                "grid-column",
                "grid-column-start",
                "grid-column-end",
                "grid-row",
                "grid-row-start",
                "grid-row-end",
                "place-self",
                "justify-self",
                "align-self",
                "grid",
                "grid-template",
                "grid-template-areas",
                "grid-template-columns",
                "grid-template-rows",
                "grid-auto-flow",
                "grid-auto-columns",
                "grid-auto-rows",
                "place-items",
                "align-items",
                "justify-items",
                "place-content",
                "align-content",
                "justify-content",
                "gap",
                "column-gap",
                "row-gap",
                "columns",
                "columns-count",
                "columns-width",
                "columns-gap",
                "width",
                "min-width",
                "max-width",
                "height",
                "min-height",
                "max-height",
                "margin",
                "margin-top",
                "margin-right",
                "margin-bottom",
                "margin-left",
                "margin-inline",
                "margin-inline-start",
                "margin-inline-end",
                "padding",
                "padding-top",
                "padding-right",
                "padding-bottom",
                "padding-left",
                "border",
                "border-top",
                "border-right",
                "border-bottom",
                "border-left",
                "border-width",
                "border-top-width",
                "border-right-width",
                "border-bottom-width",
                "border-left-width",
                "border-radius",
                "border-color",
                "border-top-color",
                "border-right-color",
                "border-bottom-color",
                "border-left-color",
                "background",
                "background-color",
                "background-image",
                "background-repeat",
                "background-size",
                "background-position",
                "background-attachment",
                "list-style",
                "list-style-type",
                "list-style-image",
                "list-style-position",
                "opacity",
                "transform",
                "box-shadow",
                "fill",
                "color",
                "font",
                "font-size",
                "line-height",
                "font-weight",
                "font-style",
                "text-align",
                "text-decoration",
                "text-transform"
            ],
            {
                "severity": "warning",
                "unspecified": "bottom"
            }
        ]
    }
}
